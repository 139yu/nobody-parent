<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xj.nobody.admin.mapper.SysUserMapper">


    <resultMap id="userDTOMap" type="com.xj.nobody.commons.dto.UserDTO">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <collection property="roleList" ofType="com.xj.nobody.commons.dto.RoleDTO">
            <id column="role_id" property="id"/>
            <result property="roleKey" column="role_key"/>
            <collection property="menuList" ofType="com.xj.nobody.commons.dto.MenuDTO">
                <id column="menu_id" property="id"/>
                <result property="title" column="title"/>
                <result property="path" column="path"/>
                <result property="perms" column="perms"/>
            </collection>
        </collection>
    </resultMap>

    <select id="loadUserWithPerms" resultMap="userDTOMap">
        SELECT
            u.id,
            u.username,
            u.email,
            u.`password`,
            u.nickname,
            u.`status`,
            u.login_time,
            u.create_time,
            u.STATUS,
            ur.role_id,
            r.role_key,
            r.`name`,
            rm.menu_id,
            m.title,
            m.perms,
            m.path
        FROM
            sys_user u
                LEFT JOIN sys_user_role ur ON u.id = ur.user_id
                LEFT JOIN sys_role r ON r.id = ur.role_id
                AND r.`status` = 1
                LEFT JOIN sys_role_menu rm ON rm.role_id = r.id
                LEFT JOIN sys_menu m ON rm.menu_id = m.id
        WHERE
            u.username = #{username}
    </select>
</mapper>